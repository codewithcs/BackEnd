<%- include ("../partials/header") %>

<!-- Put everything inside a containter to make some spacing.-->

<div class="container">

	<div class="row"> <!-- To create a grid system -->

		<h1 style="text-align:center;">Create a New Campground</h1>

		<div style="width: 30%; margin:25px auto; "> <!-- margin of 25 on top and bottom and auto on left and right-->
		 	
			<form action="/campgrounds" method="POST" >
				
				<div class="form-group">
					<input class="form-control" type="text" name="campname" placeholder="name">
				</div>	
				
				<div class="form-group">
					<input class="form-control" type="text" name="image" placeholder="img">	
				</div>
				
				<div class="form-group">
					<input class="form-control" type="text" name="description" placeholder="description">	
				</div>
				
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-block">Submit!</button>	 
				</div>
				
		
			</form>	
			
			<a href="/campgrounds" >Go Back</a> <!-- this gets the styling defined in outer div. -->
			
		</div>
	
	</div>	
	
</div>
<%- include ("../partials/footer") %>


