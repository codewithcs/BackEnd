<% include partials/header %> 

<div class="ui main text container"> <!-- Will give us the centred container. -->
	
	<div class="ui huge header">RESTful Blog App</div>
	
	<div class="ui top attached segment">
	
		<div class="ui divided items">
		
				<% allBlogs.forEach ( function(blog) { %>
 
		<div class="item">
			
			
				<div class="image"> <!-- help to constrain the size of the image --> 
					<img src="<%= blog.image %>">	
				</div>
			
				<div class="content">
					
					<a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
					<!-- this link takes us to that particular blog. -->
					
					<div class="meta">
						<span><%= blog.created.toDateString() %></span>		
					</div>
					
					<div class="description">
						<p><%- blog.body.substring(0, 100) %>...</p>
					</div>
					
					<div class="extra">
	                   
						<a class="ui floated basic violet button" href="/blogs/<%= blog._id %>">
							Read More
							<i class="right chevron icon"></i>
						</a>	
						
					</div>
					
				</div >
			
					
				
		</div>
 

<% }); %>
		
		</div>
		
	</div>
	
</div>




<% include partials/footer %> 
